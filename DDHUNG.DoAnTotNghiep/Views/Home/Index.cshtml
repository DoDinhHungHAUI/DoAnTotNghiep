
@model DDHUNG.ApplicationCore.ViewModel.HomeViewModel


@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href = "~/css/CustomCss/ProductSection.css" />

<!--Slide -->
<section id="home-section" class="hero">

    @await Component.InvokeAsync("Slider");

</section>


<section class="ftco-section product-section">
    <div class="container">
        <div class="row justify-content-center mb-3 pb-3">
            <div class="col-md-12 heading-section text-center ftco-animate">
                @*<span class="subheading">Featured Products</span>
                    <h2 class="mb-4">Our Products</h2>
                    <p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia</p>*@

                @*<h2 class="mb-4">Sản Phẩm Mới Nhất</h2>*@
                <span class="subheading">Sản Phẩm Mới Nhất</span>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">

            @{
                var lstProductLength = Model.ListProduct.Count;

                foreach (var item in Model.ListProduct)
                {
                    var urlImage = "/images/" + item.Image;

                    <div class="col-md-6 col-lg-3 ftco-animate">
                        <div class="product">
                            <a href="#" class="img-prod">
                                <img class="img-fluid" src=@urlImage alt="Colorlib Template">
                                <span class="status">30%</span>
                                <div class="overlay"></div>
                            </a>
                            <div class="text py-3 pb-4 px-3 text-center">
                                <h3><a href="#">@item.ProductName</a></h3>
                                <div class="d-flex">
                                    <div class="pricing">
                                        <p class="price"><span class="mr-2 price-dc">@{(item.Price ?? 0).ToString("N0").Replace(",", ".");} Vnđ</span><span class="price-sale">@item.PromotionPrice</span></p>
                                    </div>
                                </div>
                                <div class="bottom-area d-flex px-3">
                                    <div class="m-auto d-flex">
                                        <a href="#" class="add-to-cart d-flex justify-content-center align-items-center text-center">
                                            <span>
                                                <i class="fa fa-bars" aria-hidden="true"></i>
                                            </span>
                                        </a>
                                        <a href="#" class="buy-now d-flex justify-content-center align-items-center mx-1">
                                            <span>
                                                <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                            </span>
                                        </a>
                                        <a href="#" class="heart d-flex justify-content-center align-items-center ">
                                            <span>
                                                <i class="fa fa-heart" aria-hidden="true"></i>
                                            </span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            }

        </div>
    </div>
</section>






